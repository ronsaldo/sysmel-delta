{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build SDVM",
            "type": "shell",
            "command": "./build.sh",
            "problemMatcher": ["$gcc"],
            "group": "build",
            "presentation": {
                "echo": false,
                "showReuseMessage": false,
                "clear": true
            }
        },
        {
            "label": "Build Hello World Sample",
            "type": "shell",
            "command": "./sysmelbc/sysmelbc.py -o 01-helloWorld samples/01-helloWorld.sysmel",
            "problemMatcher": ["$sysmelc"],
            "group": "build",
            "presentation": {
                "echo": false,
                "showReuseMessage": false,
                "clear": true
            }
        },
        {
            "label": "Build Sysmelc (Component)",
            "type": "shell",
            "command": "./sysmelbc/sysmelbc.py -o sysmelc-scanner sysmelc/scanner.sysmel",
            "problemMatcher": ["$sysmelc"],
            "group": "build",
            "presentation": {
                "echo": false,
                "showReuseMessage": false,
                "clear": true
            }
        }
    ]
}