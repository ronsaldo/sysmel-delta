    "version": "0.2.0",
    "configurations": [
        {
            "name": "Sysmelbc",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/sysmelbc/sysmelbc.py",
            "console": "integratedTerminal",
            "args": ["-v", "-emit-sdvm", "-c", "-o", "test.sdvm", "samples/01-helloWorld.sysmel"]
        },
        {
            "name": "Sysmelbc ASG",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/sysmelbc/sysmelbc.py",
            "console": "integratedTerminal",
            "args": ["-v", "-asg", "-emit-sdvm", "-c", "-o", "test.sdvm", "samples/01-asgHelloWorld.sysmel"]
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Launch (Windows x64 - Default target)",
            "program": "${workspaceFolder}/build/windows/x64/bin/sdvm.exe",
            "args": ["-v", "-o", "test.obj", "test.sdvm"],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Launch (Windows x64 - Linux target)",
            "program": "${workspaceFolder}/build/windows/x64/bin/sdvm.exe",
